name = cvsan
description = cvsan built off Bootstrap Sub-theme.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[header]         = 'Header'
regions[navigation]     = 'Navigation'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[desashboard]    = 'Desashboard'
regions[content]        = 'Content'
regions[slider_left]    = 'Slider Left Side'
regions[slider_right]   = 'Slider Right Side'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'

regions[bottom_left] 	= Bottom Left
regions[bottom_center] 	= Bottom Center
regions[bottom_right] 	= Bottom Right

regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/style.css
stylesheets[all][] = css/responsive.css


